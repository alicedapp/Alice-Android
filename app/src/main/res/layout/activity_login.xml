<?xml version="1.0" encoding="utf-8"?>
<com.alice.customView.immerseview.ImmerseRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:need_immerse="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_400"
        android:text="Welcome to"
        android:textColor="@color/color_adadad"
        android:textSize="@dimen/text_font_size_100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_dimen_50"
        android:text="Alice"
        android:textColor="@color/color_565656"
        android:textSize="@dimen/text_font_size_120"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/view_dimen_100"
        android:layout_marginRight="@dimen/view_dimen_100"
        android:orientation="vertical">

        <Button
            android:id="@+id/tv_create"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_174"
            android:background="@drawable/bg_corner_100_solid_f1f4f5"
            android:gravity="center"
            android:text="Create Wallet"
            android:textAllCaps="false"
            android:textColor="@color/color_aeafaf"
            android:textSize="@dimen/text_font_size_48" />

        <Button
            android:id="@+id/tv_import"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_174"
            android:layout_marginTop="@dimen/view_dimen_30"
            android:background="@drawable/bg_corner_100_solid_f1f4f5"
            android:gravity="center"
            android:text="Import Wallet"
            android:textAllCaps="false"
            android:textColor="@color/color_aeafaf"
            android:textSize="@dimen/text_font_size_48" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_dimen_150"
            android:layout_marginTop="@dimen/view_dimen_40"
            android:layout_marginBottom="@dimen/view_dimen_100">

            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_dimen_40"
                android:text="I agree to the Zed Lab's Terms of Service and Privacy Policy" />

        </LinearLayout>

    </LinearLayout>


</com.alice.customView.immerseview.ImmerseRelativeLayout>