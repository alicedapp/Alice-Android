<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/memorizingWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/toRn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toRn"
            android:textAllCaps="false"
            android:text="toRN" />

        <Button
            android:id="@+id/importWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Import"
            android:textAllCaps="false"
            android:text="importWallet" />

        <Button
            android:id="@+id/createWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Get"
            android:textAllCaps="false"
            android:text="createWallet" />

        <Button
            android:id="@+id/checkBalances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkBalances"
            android:textAllCaps="false"
            android:text="checkBalances" />

        <Button
            android:id="@+id/transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Transfer"
            android:textAllCaps="false"
            android:text="Transfer" />

        <Button
            android:id="@+id/signMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Transfer"
            android:textAllCaps="false"
            android:text="signMessage" />

        <Button
            android:id="@+id/smartContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="smartContract"
            android:textAllCaps="false"
            android:text="get" />

        <Button
            android:id="@+id/smartContractSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="smartContract"
            android:textAllCaps="false"
            android:text="set" />

    </LinearLayout>


</LinearLayout>